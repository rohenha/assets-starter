{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": ["prettier"],
    "ignorePatterns": [
        "utils/**/*.js",
        "node_modules/**/*.js"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-param-reassign": 0,
        "complexity": ["error", 5]
    },
    "globals": {
        "document": true,
        "window": true,
        "Image": true,
        "grecaptcha": true,
        "localStorage": true,
        "history": true,
        "FormData": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    }
}
